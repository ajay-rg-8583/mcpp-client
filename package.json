{
	"name": "mcp-client",
	"description": "A VSCode client for MCP servers.",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onView:mcp.chatView"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"title": "MCP Client",
			"properties": {
				"mcpClient.servers": {
					"type": "object",
					"description": "An array of MCP servers that can be used by the extension.",
					"default": {
						"zoho-creator-mcp": {
							"description": "A server for interacting with the Zoho Creator API to manage applications, forms, and records.",
							"type": "sse",
							"url": "http://localhost:8000/mcpp"
						},
						"zoho-crm-mcp": {
							"description": "A server for interacting with the Zoho CRM API to manage leads, contacts, and sales.",
							"type": "sse",
							"url": "http://localhost:8001/mcpp"
						}
					}
				},
				"mcpClient.openaiApiKey": {
					"type": "string",
					"description": "The API key for the OpenAI LLM used to select the appropriate MCP server."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mcp-client-container",
					"title": "MCP Client",
					"icon": "client/media/robot.svg"
				}
			]
		},
		"views": {
			"mcp-client-container": [
				{
					"type": "webview",
					"id": "mcp.chatView",
					"name": "MCP Chat",
					"icon": "client/media/robot.svg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
